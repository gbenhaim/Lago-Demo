{
    "domains": {
        "vm0-server": {
            "memory": "4096",
            # This might be too much memory? it's not meant to actually run
            # anything besides the demo right?
            "nics": [
                {
                    "net": "lago"
                }
            ],
            "disks": [
                {
                    "template_name": "el7-base",
                    "type": "template",
                    "name": "root",
                    "dev": "vda",
                    "format": "qcow2"
                }
            ],
            "metadata": {
                "ovirt-role": "server",
                "ovirt-scripts": [
                    "../deployment-scripts/vm0-server-deploy-script.sh"
                ]
            }
        },

        "vm1-slave": {
            "memory": "2047",
            # same here
            "nics": [
                {
                    "net": "lago"
                }
            ],
            "disks": [
                {
                    "template_name": "el7-base",
                    "type": "template",
                    "name": "root",
                    "dev": "vda",
                    "format": "qcow2"
                }
            ],
            "metadata": {
                "ovirt-role": "host",
                # no need for ovirt roles
                "ovirt-scripts": [
                # use deploy-scripts, more generic
                    "../deployment-scripts/vm1-slave-deploy-script.sh"
                ]
            }
        },
        "vm2-slave": {
            "memory": "2047",
            "nics": [
                {
                    "net": "lago"
                }
            ],
            "disks": [
                {
                    "template_name": "fc23-base",
                    "type": "template",
                    "name": "root",
                    "dev": "vda",
                    "format": "qcow2"
                }
            ],
            "metadata": {
                "ovirt-role": "host",
                "ovirt-scripts": [
                    "../deployment-scripts/vm2-slave-deploy-script.sh"
                ]
            }
        }
    },
    "nets": {
        "lago": {
            "type": "nat",
            "dhcp": {
                "start": 100,
                "end": 254
            },
            "management": true
        }
    }
}
